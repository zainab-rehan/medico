<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/layout_bg"
    android:backgroundTint="#ECECEC"
    >

    <ImageView
        android:id="@+id/doctor_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:src="@drawable/doctorsmall"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:textColor="@android:color/white"
        android:textSize="13pt" />

    <RelativeLayout
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_person_outline_24" />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_baseline_work_outline_24" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/ic_outline_location_on_24"
            android:translationX="5dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="130dp"
            android:src="@drawable/ic_baseline_event_available_24" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="388dp"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#2A628C"
            android:textSize="10pt"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/doctor_specialization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/doctor_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:textSize="8pt" />


        <TextView
            android:id="@+id/doctor_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:textSize="8pt" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/book_appointment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:src="@drawable/ic_baseline_access_time_24">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:text="Book Appointment"
                android:textSize="20dp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/call_doctor"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_marginTop="65dp"
                android:gravity="center"
                android:src="@drawable/ic_outline_call_24">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="65dp"
                android:text="Call"
                android:textSize="20dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/msg_doctor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="115dp"
                android:gravity="center"
                android:src="@drawable/ic_outline_sms_24"></ImageView>

            <TextView
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="115dp"
                android:text="Message"
                android:textSize="20dp"></TextView>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>


